<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activities.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/padding_16dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/margin_28dp"
            android:contentDescription="@null"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_2dp"
            android:text="@string/chat_security"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/size_26sp" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_26dp"
            android:background="@drawable/et_background"
            android:elevation="@dimen/elevation_1dp"
            android:hint="@string/email"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:padding="@dimen/padding_12dp"
            android:textColorHint="@color/black"
            android:textSize="@dimen/size_14sp" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            android:background="@drawable/et_background"
            android:elevation="@dimen/margin_4dp"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="@dimen/padding_10dp"
            android:textColorHint="@color/black"
            android:textSize="@dimen/size_14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            android:padding="10dp">

            <CheckBox
                android:id="@+id/cb_remember_me"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_12dp"
                android:layout_toLeftOf="@+id/tv_forgot_password"
                android:maxLines="1"
                android:text="@string/remember_me"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBaseline="@id/cb_remember_me"
                android:layout_alignParentRight="true"
                android:maxLines="1"
                android:text="@string/forgot_password"
                android:textColor="@color/black" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            android:background="@drawable/btn_blue_background"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="@dimen/size_16sp" />

        <TextView
            android:id="@+id/tv_new_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20dp"
            android:gravity="center"
            android:text="New to Chat, Create Account?"
            android:textColor="@color/black"
            android:textSize="16sp" />


    </LinearLayout>
</ScrollView>
